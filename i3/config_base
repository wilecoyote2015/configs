# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# Fix for hotplugging scale change
exec xrdb -load ~/.Xresources

exec "setxkbmap -layout gb,de -option 'grp:alt_shift_toggle'"

exec "xset s off"
exec "xset -dpms"
exec "xset s noblank"

exec pavucontrol
exec easyeffects

exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# exec "picom -b --experimental-backends --backend glx --no-fading-destroyed-argb -O 0 -D 0 --vsync --no-fading-openclose --inactive-opacity 1.0 -e 1"

# set gtk theme
set $gnome-schema org.gnome.desktop.interface

exec_always gsettings set $gnome-schema gtk-theme 'Adwaita'
exec_always gsettings set $gnome-schema icon-theme 'Adwaita'
exec_always gsettings set $gnome-schema cursor-theme 'Adwaita'


# load devmon
exec killall devmon udisks
exec devmon &


### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left a
set $down s
set $up w
set $right d
# The standard programs
set $webbrowser MOZ_ENABLE_WAYLAND=1 firefox
set $webbrowser_private MOZ_ENABLE_WAYLAND=1 firefox --private-window
# Your preferred terminal emulator
set $term foot
set $filebrowser foot -e ranger
# Your preferred application launcher
set $menu rofi -show drun
set $windowswitcher ~/Software/Swytch/swytch.sh
set $windowcloser /run/media/bjoern/daten/Programming/Swytch/swytch.sh kill
set $fileopener /run/media/bjoern/daten/Programming/Roloo/roloo.sh dolphin

### Key bindings
#
# Basics:
#
    # start a terminal
    bindsym $mod+Return exec $term

    # kill focused window
    bindsym $mod+Shift+q kill

    bindsym Alt+Tab workspace back_and_forth

    # start your launcher
    bindsym $mod+q exec $menu

    # window switcher
    bindsym $mod+Tab exec $windowswitcher

    # close a window
    bindsym $mod+Shift+Ctrl+q exec $windowcloser

    # find folder
    # bindsym $mod+Shift+f exec $fileopener

    # start overview``
    #bindsym $mod+s exec $windowswitcher
    
    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod

    # reload the configuration file
    bindsym $mod+Shift+c reload

    # exit sway (logs you out of your wayland session)
    bindsym $mod+Shift+e exit

